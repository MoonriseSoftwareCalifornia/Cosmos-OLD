{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "farmNumber": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "Web Farm ID no from farm catalog."
            }
        },
        "websiteNumber": {
            "type": "int",
            "metadata": {
                "description": "Web site ID no for this farm."
            }
        },
        "purchaserTenantId": {
            "type": "string",
            "defaultValue": "9366b962-6d44-4019-a4cb-9dc33d9c80b7",
            "metadata": {
                "description": "Tenant ID of purchaser (default moonrise.net)."
            }
        },
        "keyVaultName": {
            "type": "string",
            "defaultValue": "mastervaultwestus",
            "metadata": {
                "description": "Master Keyvault for this subscription."
            }
        }
    },
    "functions": [],
    "variables": {
        "editorName": "[concat('edi-', parameters('farmNumber'), '-', parameters('websiteNumber'), '-', uniquestring(resourceGroup().id))]",
        "publisherName": "[concat('pub-', parameters('farmNumber'), '-', parameters('websiteNumber'), '-', uniquestring(resourceGroup().id))]",
        "farmKeyVaultName": "[concat('farmvault', parameters('farmNumber'), uniquestring(resourceGroup().id))]",
        "farmResourceGroupName": "[resourceGroup().name]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(variables('farmKeyVaultName'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('purchaserTenantId')]",
                        "objectId": "[reference(concat(resourceId('Microsoft.Web/sites', variables('publisherName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                        "permissions": {
                            "secrets": [
                                "List",
                                "Get"
                            ]
                        }
                    },
                    {
                        "tenantId": "[parameters('purchaserTenantId')]",
                        "objectId": "[reference(concat(resourceId('Microsoft.Web/sites', variables('editorName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                        "permissions": {
                            "secrets": [
                                "List",
                                "Get"
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "nestedDeployment",
            "resourceGroup": "RG-WESTUS-FARM-SHARED-RESOURCES",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "functions": [],
                    "resources": [
                        {
                            "type": "Microsoft.KeyVault/vaults/accessPolicies",
                            "name": "[concat(parameters('keyVaultName'), '/add')]",
                            "apiVersion": "2019-09-01",
                            "properties": {
                                "accessPolicies": [
                                    {
                                        "tenantId": "[parameters('purchaserTenantId')]",
                                        "objectId": "[reference(concat(resourceId(variables('farmResourceGroupName'), 'Microsoft.Web/sites', variables('publisherName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                                        "permissions": {
                                            "secrets": [
                                                "List",
                                                "Get"
                                            ]
                                        }
                                    },
                                    {
                                        "tenantId": "[parameters('purchaserTenantId')]",
                                        "objectId": "[reference(concat(resourceId(variables('farmResourceGroupName'), 'Microsoft.Web/sites', variables('editorName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2015-08-31-PREVIEW').principalId]",
                                        "permissions": {
                                            "secrets": [
                                                "List",
                                                "Get"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        }
    ]
}